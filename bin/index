#!/usr/bin/env node
var argv = require('optimist')
  .usage()
  .options('platform', {
    describe: 'Mobile platform'
  })
  .options('tests', {
    describe: 'Tests folder',
    default: './tests'
  })
  .argv

if(argv.help) {
  console.log([
    'cordova-test cli',
    'Usage: cordova-test --platform [android] --tests [path_to_appium_tests]'
  ].join('\n'))
  return;
}

var pr = require('../node')().run(argv.platform, argv.tests); 
